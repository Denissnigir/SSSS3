<Application x:Class="CabelAppS2.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CabelAppS2"
             StartupUri="Windows/UserWindow.xaml">
    <Application.Resources>
        <Style TargetType="Grid" x:Key="MainGrid">
            <Setter Property="Background" Value="#FFFFFF"/>
        </Style>
        <Style TargetType="Grid" x:Key="SecondaryGrid">
            <Setter Property="Background" Value="#B5DEFA"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#4A67F7"/>
        </Style>

        <Style TargetType="Button" x:Key="RoundBtn">
            <Setter Property="Background" Value="#4A67F7"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="50"/>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
